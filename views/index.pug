doctype html
html
	head
		meta(name="viewport" content=`	user-scalable=no, initial-scale=1.0,
									maximum-scale=1.0, minimum-scale=1.0,
									width=device-width, height=device-height`)

		title L2 Coffee

		link(rel="stylesheet" type="text/css" href="/evil-icons/evil-icons.css")
		link(rel="stylesheet" type="text/css" href="/stylesheets/common.css")
		link(rel="stylesheet" type="text/css" href="/stylesheets/viewbeverage.css")
		link(rel="stylesheet" type="text/css" href="/stylesheets/viewuser.css")
		link(rel="stylesheet" type="text/css" href="/stylesheets/vieworder.css")
		link(rel="stylesheet" type="text/css" href="/stylesheets/viewadmin.css")
		//link(rel="stylesheet" type="text/css" href="/stylesheets/viewall.css")

		script(src="/evil-icons/evil-icons.js")
		script(src="/javascripts/common.js")
		script(src="/javascripts/viewbeverage.js")
		script(src="/javascripts/viewuser.js")
		script(src="/javascripts/vieworder.js")
		script(src="/javascripts/viewadmin.js")
		script(src="/javascripts/viewall.js")
		script.
			function initAll() {
				initOrderElem();
				//initBeverageElem();
				initUserElem( '#{loginType}', '#{loginName}', '#{loginID}', '#{loginUID}' );
				initAdminElem();
				initAllElem( '#{loginType}' );
				l2data.getAllList( l2all.cbAllList );
			}

	body(onLoad="initAll();")
		div.cApp
			div.cUpper
				div.cMenu(onclick="l2all.changePage('Order')") !{icons.cart}
				div.cMenu(onclick="l2all.changePage('User')") !{icons.user}
				div.cMenu(onclick="l2all.changePage('Beverage')") !{icons.pencil}
				div.cMenu#menu_admin(onclick="l2all.changePage('Admin')") !{icons.gear}
				div.cMenu(onclick="l2data.getAllList();") !{icons.refresh}
				div.cMenu(onclick="window.open('https://github.com/eething/CoffeeServer/issues');") !{icons.github}

			include order_part
			include user_part
			include beverage_part
			include admin_part

		div.cMessage
			div#message
